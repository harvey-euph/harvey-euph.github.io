<script>
(function() {
    const fileInput = document.getElementById('s3FileInput');
    const selectBtn = document.getElementById('s3SelectBtn');
    const uploadBtn = document.getElementById('s3UploadBtn');
    const fileListDiv = document.getElementById('s3FileList');
    const progressSpan = document.getElementById('s3Progress');
    
    let selectedFiles = [];

    // æ ¼å¼åŒ–æª”æ¡ˆå¤§å°
    function formatFileSize(bytes) {
        if (bytes === 0) return '0 Bytes';
        const k = 1024;
        const sizes = ['Bytes', 'KB', 'MB', 'GB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
    }

    // é»æ“Š Select Files æŒ‰éˆ•
    selectBtn.addEventListener('click', () => {
        fileInput.click();
    });

    // æª”æ¡ˆé¸æ“‡è®Šæ›´
    fileInput.addEventListener('change', (e) => {
        const newFiles = Array.from(e.target.files);
        selectedFiles = [...selectedFiles, ...newFiles];
        updateFileList();
        fileInput.value = ''; // æ¸…ç©º input ä»¥ä¾¿å†æ¬¡é¸æ“‡
    });

    // æ›´æ–°æª”æ¡ˆåˆ—è¡¨é¡¯ç¤º
    function updateFileList() {
        if (selectedFiles.length === 0) {
            fileListDiv.innerHTML = '<div class="s3-empty-message">å°šæœªé¸æ“‡ä»»ä½•æª”æ¡ˆ<br>è«‹é»æ“Šä¸Šæ–¹æŒ‰éˆ•é¸æ“‡æª”æ¡ˆ</div>';
            uploadBtn.disabled = true;
            uploadBtn.className = 's3-btn s3-btn-primary';
            uploadBtn.textContent = 'Upload Files';
            progressSpan.textContent = '';
            return;
        }

        fileListDiv.innerHTML = '';
        selectedFiles.forEach((file, index) => {
            const fileItem = document.createElement('div');
            fileItem.className = 's3-file-item';
            
            const fileName = document.createElement('span');
            fileName.className = 's3-file-name';
            fileName.textContent = file.name;
            
            const fileSize = document.createElement('span');
            fileSize.className = 's3-file-size';
            fileSize.textContent = formatFileSize(file.size);
            
            const removeBtn = document.createElement('button');
            removeBtn.className = 's3-remove-btn';
            removeBtn.innerHTML = 'Ã—';
            removeBtn.title = 'ç§»é™¤æ­¤æª”æ¡ˆ';
            removeBtn.onclick = () => removeFile(index);
            
            fileItem.appendChild(fileName);
            fileItem.appendChild(fileSize);
            fileItem.appendChild(removeBtn);
            fileListDiv.appendChild(fileItem);
        });

        uploadBtn.disabled = false;
        uploadBtn.className = 's3-btn s3-btn-primary';
        uploadBtn.textContent = 'Upload Files';
        progressSpan.textContent = `å·²é¸æ“‡ ${selectedFiles.length} å€‹æª”æ¡ˆ`;
    }

    // ç§»é™¤æª”æ¡ˆ
    function removeFile(index) {
        selectedFiles.splice(index, 1);
        updateFileList();
    }

    // ä¸Šå‚³æª”æ¡ˆ
    uploadBtn.addEventListener('click', async () => {
        if (selectedFiles.length === 0) return;

        uploadBtn.disabled = true;
        uploadBtn.textContent = 'Uploading...';
        progressSpan.textContent = 'ä¸Šå‚³ä¸­...';

        try {
            // TODO: é€™è£¡å¯¦ä½œ AWS S3 ä¸Šå‚³é‚è¼¯
            await uploadToS3(selectedFiles);
            
            // ä¸Šå‚³æˆåŠŸ
            uploadBtn.className = 's3-btn s3-btn-success';
            uploadBtn.textContent = 'âœ“ Succeed';
            progressSpan.textContent = 'ä¸Šå‚³æˆåŠŸï¼';
            
            // 3ç§’å¾Œé‡ç½®
            setTimeout(() => {
                selectedFiles = [];
                updateFileList();
            }, 3000);

        } catch (error) {
            console.error('Upload failed:', error);
            
            // ä¸Šå‚³å¤±æ•—
            uploadBtn.className = 's3-btn s3-btn-danger';
            uploadBtn.textContent = 'âœ— Failed';
            uploadBtn.disabled = false;
            progressSpan.textContent = 'ä¸Šå‚³å¤±æ•—ï¼Œè«‹é‡è©¦';
        }
    });

    // AWS S3 ä¸Šå‚³å‡½æ•¸ï¼ˆéœ€è¦å¯¦ä½œï¼‰
    async function uploadToS3(files) {
        // æ¨¡æ“¬ä¸Šå‚³éç¨‹ï¼ˆ2ç§’å»¶é²ï¼‰
        await new Promise(resolve => setTimeout(resolve, 2000));
        
        // æ¨¡æ“¬æˆåŠŸï¼ˆ90%æ©Ÿç‡ï¼‰æˆ–å¤±æ•—ï¼ˆ10%æ©Ÿç‡ï¼‰
        if (Math.random() > 0.1) {
            return { success: true };
        } else {
            throw new Error('Upload simulation failed');
        }
        
        // å¯¦éš›å¯¦ä½œç¯„ä¾‹ï¼š
        // const formData = new FormData();
        // files.forEach(file => formData.append('files', file));
        // const response = await fetch('/api/upload', {
        //     method: 'POST',
        //     body: formData
        // });
        // if (!response.ok) throw new Error('Upload failed');
        // return await response.json();
    }
})();
</script>